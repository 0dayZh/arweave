#!/bin/bash

set -e

SCRIPT_DIR="$(dirname "$0")"
cd "$SCRIPT_DIR/.."

./rebar3 compile

export ERL_EPMD_ADDRESS=127.0.0.1

if [ -e $NODE_NAME ]; then
    export NODE_NAME='arweave@127.0.0.1';
fi

erl -pa `./rebar3 path` \
    -noshell \
    -config config/sys.config \
    -name cleanup-process@127.0.0.1 \
    -setcookie arweave \
    -s ar_cleanup remove_old_wallet_lists $NODE_NAME
